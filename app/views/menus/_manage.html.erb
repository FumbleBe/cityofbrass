    <dd class="<%= 'active' if active=='players' %>">
      <h3><%= link_to 'Players', players_link%></h3>
    </dd>
    <% end %>
  <% end %>
  <% if local_assigns.has_key? :options_link %>
    <% unless options_link.nil? %>
    <dd class="<%= 'active' if active=='options' %>">
      <h3><%= link_to 'Options', options_link%></h3>
    </dd>
    <% end %>
  <% end %>
</dl>

