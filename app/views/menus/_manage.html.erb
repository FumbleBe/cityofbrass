<dl class="left-menu show-for-medium-up">
  <% if local_assigns.has_key? :index_link %>
    <% unless index_link.nil? %>
    <dd class="<%= 'active' if active=='index' %>">
      <h3><%= link_to 'Index', index_link%></h3>
    </dd>
    <% end %>
  <% end %>
  <% if local_assigns.has_key? :view_link %>
    <% unless view_link.nil? %>
    <dd class="<%= 'active' if active=='view' %>">
      <h3><%= link_to 'View', view_link%></h3>
    </dd>
    <% end %>
  <% end %>
  <% if local_assigns.has_key? :details_link %>
    <% unless details_link.nil? %>
    <dd class="<%= 'active' if active=='edit' || active.blank? %>">
      <h3><%= link_to 'Details', details_link%></h3>
    </dd>
    <% end %>
  <% end %>
  <% if local_assigns.has_key? :features_link %>
