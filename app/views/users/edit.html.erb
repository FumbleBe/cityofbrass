<% provide(:title, 'Users') %>

<% content_for :breadcrumb do %>
  <%=  breadcrumb [
    { "Users" => nil },
    { @user.email => nil }
  ] %>
<% end %>

<div class="row">
  <div class="medium-12 medium-centered columns">

    <%= render :partial =>'layouts/header',
      :locals => {
        :icon => 'fa fa-users',
        :main => "Users",
        :sub => @user.email
      }
    %>
    <hr class="faded">

    <i class='fa fa-angle-double-left'></i> <%= link_to "Return to Index".html_safe, "/admin/users" %><br>

    <div class="row">
      <div class="medium-6 columns">
        <%= render 'show' %>
      </div>
      <div class="medium-6 columns">
        <%= render 'residents/admin/show' unless @resident.nil? %>
      </div>
    </div>
  </div>
</div>
