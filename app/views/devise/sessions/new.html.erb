<div class="row">
  <div class="medium-8 medium-centered columns">
    <div class="box">
      <div class="row">
        <div class="medium-5 columns text-center">
          <%= image_tag 'logo.png', width: '200px' %>
        </div>
        <div class="medium-7 columns">
          <div class="row text-right">
            <div class="small-12 columns">
              <label class="flat"><%= "#{resource_name.to_s.humanize} " if resource_name.to_s == 'admin' %>Login</label>
            </div>
          </div>
          <%= simple_form_for resource, :as => resource_name, :url => session_path(resource_name) do |f| %>
            <%= f.input :email, :autofocus => true, as: :email, placeholder: 'user@domain.com' %>
            <%= f.input :password %>
            <% if flash[:alert] %>
              <label class="error" style="padding-bottom: .5em;"><%= alert %></label>
            <% end %>
            <% if devise_mapping.rememberable? %>
            <div style='margin-top:1em; margin-bottom:.7em;'>
              <%= f.input :remember_me, label: "Remember me", as: :boolean %>
            </div>
            <% end %>
            <%= button_tag type: 'submit' do %>
              Login <i class='fa fa-sign-in'></i>
            <% end %>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
    <%= render 'devise/shared/poweredby' %>
  </div>
</div>
