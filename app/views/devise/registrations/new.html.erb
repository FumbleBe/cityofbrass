<div class="row">
  <div class="medium-8 medium-centered columns">
    <div class="box">
      <div class="row">
        <div class="medium-5 columns text-center">
          <%= image_tag 'logo.png', width: '200px' %>
        </div>
        <div class="medium-7 columns">
          <div class="row text-right">
            <div class="small-12 columns">
              <label class="flat">Sign up</label>
            </div>
          </div>
          <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| %>
            <div class="topyenohdiv">
              If you see this, leave it blank. Only bots should see this
              <%= f.input :check_field %>
            </div>
            <%= f.input :email, :autofocus => true, as: :email, placeholder: 'user@domain.com' %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>

            <%= render :partial =>'terms_of_service' %>

            <%= f.input :terms_of_service, label: "&nbsp; I agree to the #{link_to 'Terms of Service', scrolls_terms_of_service_path, 'data-reveal-id' => 'tosModal', :remote => true }".html_safe, as: :boolean %>
            <%= f.button :submit, 'Sign up!' %>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
    <%= render 'devise/shared/poweredby' %>
  </div>
</div>

<div id="tosModal" class="reveal-modal large" data-reveal>
  <div class="scroll">
    <span id="show_placeholder"></span>
    <a class="close-reveal-modal">&#215;</a>
  </div>
</div>
