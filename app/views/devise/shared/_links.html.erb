<ul class="no-bullet" style="margin-bottom: 0px;">
  <% if devise_mapping.recoverable? && controller_name.include?('sessions') %>
  <li>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </li>
  <% end %>
  <% if devise_mapping.confirmable? && controller_name.include?('registrations') %>
  <li>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
  </li>
  <% end %>
  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name.include?('passwords')  %>
  <li>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
  </li>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name.include?('sessions') %>
  <li>
    <br>Don't have an account?<br><%= link_to "Sign up now!", new_registration_path(resource_name) %>
  </li>
  <% end %>
