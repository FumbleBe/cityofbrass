<!doctype html>
<html class="no-js" lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
  <title><%= full_title(yield(:title)) %></title>
  <link rel="apple-touch-icon" href="<%=image_path "apple-touch-icon.png" %>">
  <link rel="apple-touch-icon-precomposed" href="<%=image_path "apple-touch-icon-precomposed.png" %>">
  <meta name="msapplication-config" content="none" />

<%= stylesheet_link_tag "application", "data-turbolinks-track" => true %>

<%= javascript_include_tag "vendor/modernizr" %>

<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= javascript_include_tag "https://cdn.ckeditor.com/4.5.3/full/ckeditor.js" if user_signed_in? %>

<%= yield :head %>

<%= csrf_meta_tags %>
<%= favicon_link_tag 'apple-touch-icon.png' %>

</head>
<body>

  <div id="wrap">
    <div id="main">
    <!-- WRAPPER -->

      <div class="off-canvas-wrap" data-offcanvas>
        <div class="inner-wrap">
          <nav class="tab-bar">

            <%= yield :left_menu_icon %>

            <section class="middle tab-bar-section">
              <h1 style="font-size: 1.375rem;">City of Brass</h1>
            </section>

            <section class="right-small">
              <a class="right-off-canvas-toggle menu-icon" href="#"><span></span></a>
            </section>

          </nav>

          <aside class="left-off-canvas-menu">
            <%= render 'layouts/offcanvas/left' %>
          </aside>

          <aside class="right-off-canvas-menu">
            <%= render 'layouts/offcanvas/right' %>
          </aside>

          <section class="main-section">

    <!-- WRAPPER -->

            <%= render 'layouts/notices' %>
            <%= yield %>
            <br>
            <% if Rails.env.development? %>
            <div class="show-for-medium-up">
              <%= debug(params) %>
            </div>
            <% end %>


    <!-- WRAPPER -->

          </section>
          <a class="exit-off-canvas"></a>
        </div>
      </div>

    <!-- WRAPPER -->
    </div>
  </div>
  <div id="footer">
    <%= render 'layouts/footer' %>
  </div>

  <span class="go-top"><a href="#" >Back to top <i class='fa fa-chevron-circle-up'></i></a></span>

  <%= yield :footer %>

</body>
</html>
