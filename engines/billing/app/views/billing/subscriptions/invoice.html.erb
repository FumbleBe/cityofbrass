<% provide(:title, 'Subscription | Invoices') %>

<% content_for :breadcrumb do %>
  <%=  breadcrumb [
          { "Account" => nil },
          { 'Subscription'  => billing.subscription_path(@subscription)  },
          { 'Invoices'  => billing.subscription_invoices_path(@subscription)  }
      ] %>
<% end %>

<div class="row">
  <div class="medium-3 large-2 columns">
    <%= render 'menus/account', :active => 'subscription' %>
  </div>
  <div class="medium-9 large-10 columns">
    <%= render 'layouts/header', :main => 'Subscription', :sub => 'Invoice' %>
    <hr class="faded">
    <div class="row">
      <div class="large-6 medium-9 columns">
        <%= render 'billing/subscriptions/invoices/invoice_detail' %>
      </div>
    </div>
  </div>
</div>

<% render "stripejs" %>
