<div class="row">
  <div class="small-12 columns">

    <div class="row">
      <div class="small-12 columns">
        <div class="row collapse">
          <label>Card Number</label>
          <div class="small-10 columns">
            <input type="text" size="20" data-stripe="number" placeholder="**** **** **** ****"/>
          </div>
          <div class="small-2 columns">
            <span class="postfix"><i class='fa fa-credit-card'></i></span>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="small-7 columns">
        <div class="row collapse">
          <label>Expiration</label>
          <div class="small-3 columns">
            <select data-stripe="exp-month">
              <option value="1">01</option>
              <option value="2">02</option>
              <option value="3">03</option>
              <option value="4">04</option>
              <option value="5">05</option>
              <option value="6">06</option>
              <option value="7">07</option>
              <option value="8">08</option>
              <option value="9">09</option>
              <option value="10">10</option>
              <option value="11">11</option>
              <option value="12">12</option>
            </select>
          </div>
          <div class="small-5 columns">
            <select data-stripe="exp-year">
              <%
                thisYear = Time.now.year;
                yearRange = Array(thisYear..(thisYear+20));

                yearRange.each do |year|
              %>
                <% if year == thisYear %>
                  <option value="<%= year %>" selected="selected"><%= year %></option>
                <% else %>
                  <option value="<%= year %>"><%= year %></option>
                <% end %>
              <% end %>

            </select>
          </div>
          <div class="small-4 columns">
            <span class="postfix"><i class='fa fa-calendar'></i></span>
          </div>
        </div>
      </div>
      <div class="small-5 columns">
        <div class="row collapse">
          <label>CCV</label>
          <div class="small-8 columns">
            <input type="text" size="4" data-stripe="cvc" placeholder="CVC"/>
          </div>
          <div class="small-4 columns">
            <span class="postfix"><i class='fa fa-lock'></i></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
