<% if @core_faq.errors.count == 0 %>

  $('.alert-box').remove();
  $("body").append ("<%= j(render 'layouts/notices') %>");
  $('#form_div').remove();
  $('#form_placeholder').show();
  $('#core_faqs').append('<%= j render("core_faq", :core_faq => @core_faq) %>');

<% else %>

  $('#form_div').remove();
  $('#form_placeholder').after('<%= j render("form") %>');

<% end %>
