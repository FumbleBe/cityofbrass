<% type_array = type_split(@type) %>
<% provide(:title, "#{type_array[1]} | New") %>
<% content_for :breadcrumb do %>
  <%=  breadcrumb [
    { type_array[0] => nil },
    { type_array[1] => polymorphic_path(@type.tableize) },
    { "New #{type_array[1].singularize}" => nil }
  ] %>
<% end %>

<div class="row">
  <div class="medium-3 large-2 columns">
    <%= render :partial => 'menus/manage',
      :locals => {
        :active => 'details',
        :index_link => polymorphic_path(@type.tableize)
      } %>
  </div>

  <div class="medium-9 large-10 columns" id="brass_form">
    <%= simple_form_for @entity do |f| %>
      <%= render :partial => 'form', :locals => { :f => f } %>
    <% end %>
  </div>


</div>

<%= render :partial =>'layouts/ckeditor', :locals => { :cke_version => 'standard' } %>
