<table class="sheet-table">
  <thead>
    <tr>
      <th class="text-center" colspan="3">Saving Throws</th>
    </tr>
  </thead>
  <tbody>
    <% @parent_object.saving_throws.each do |saving_throw| %>
      <tr class="roll">
        <td><%= saving_throw.name %></td>
        <td class="text-center">
          <% dice = saving_throw.game_dice(@parent_object.core_rules) %>
          <% bonus = saving_throw.calculated_bonus(@parent_object.ability_scores, @parent_object.modifiers, @parent_object.base_values) %>
          <%= render 'layouts/dice_roller',
            core_rules: @parent_object.core_rules,
            dice: dice,
            bonus: bonus,
            display: saving_throw.display_dice_or_modifier(@parent_object.core_rules, bonus, dice)
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
