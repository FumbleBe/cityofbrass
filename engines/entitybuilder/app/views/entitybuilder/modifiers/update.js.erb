<% if @modifier.errors.count == 0 %>

  $('.alert-box').remove();
  $("body").append ("<%= j(render 'layouts/notices') %>");
  $('#form_modifier_div').remove();
  $('#form_modifier_placeholder').show();

  $('#form_div_mod').remove();
  $('#brass_form_mod').html("<%= j(render 'form_list') %>");
  bindSortable();

<% else %>

  $('#form_modifier_div').remove();
  $('#form_modifier_placeholder').after('<%= j render("item_form") %>');

  $('#form_div_mod').remove();
  $('#form_placeholder_mod').after('<%= j render("form") %>');

<% end %>
