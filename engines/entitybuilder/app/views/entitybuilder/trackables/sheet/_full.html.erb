<table class="sheet-table">
  <thead>
    <tr>
      <th class="name">Trackable</th>
      <th class="text-center">Current</th>
      <th class="name text-center">Tmp</th>
      <th class="name text-center show-for-medium-up">Min</th>
      <th class="name text-center show-for-medium-up">Max</th>
      <th class="name"></th>
    </tr>
  </thead>
  <tbody>
    <% @parent_object.trackables.each do |trackable| %>
      <tr class="roll">
        <td><%= link_to_if (@clickable && trackable.description.present?), trackable.name, "#{polymorphic_path(@parent_object)}/trackables/#{trackable.id}", "data-reveal-id" => "trackable_modal", :remote => true %></td>
        <td class="text-center"><%= number_with_delimiter(trackable.current) %></td>
        <td class="text-center color-c5"><%= number_with_delimiter(trackable.temporary.blank? ? '-' : trackable.temporary) %></td>
        <td class="text-center color-c5 show-for-medium-up"><%= number_with_delimiter(trackable.minimum.blank? ? '-' : trackable.minimum) %></td>
        <td class="text-center color-c5 show-for-medium-up"><%= number_with_delimiter(trackable.maximum.blank? ? '-' : trackable.maximum) %></td>
        <td><%= link_to "<i class='fa fa-cogs'></i>".html_safe, "#{polymorphic_path(@parent_object)}/trackables/#{trackable.id}/edit_sheet", "data-reveal-id" => "trackable_modal", class: "cogs125", :remote => true if @clickable %></td>
      </tr>
    <% end %>
  </tbody>
</table>
