<%= form_for @parent_object, :url => send("#{@parent_type}_trackables_path"), :remote => true, :html => {"data-sortable" => ''} do |f| %>
  <fieldset>
    <div class="row inline">
      <div class="small-6 columns">
        <label class="inline-label-flat">Name</label>
      </div>
      <div class="small-2 columns text-center">
        <label class="inline-label-flat">Current</label>
      </div>
      <div class="small-4 columns text-right">
        <% if request.variant == [:phone] %>
          <span class="right"><a id="sortable_unlock"><span class="right"><i class="lock fa fa-lock" id="sortable_unlock_icon"></i></a></span>
        <% else %>
          &nbsp;
        <% end %>
      </div>
    </div>
    <ul class="sortable row">
      <%= f.fields_for :trackables do |trackable| %>
      <li id="trackable_<%= trackable.object.id %>" "sortable-item">
        <%= trackable.hidden_field :sort_order %>
        <div class="row">
          <div class="small-6 columns clipper">
            <strong><%= trackable.object.name[0,20] %></strong>
            <% if trackable.index == 0 %><i class="fa fa-pencil color-c5"></i><% end %>
          </div>
          <div class="small-2 columns clipper text-center">
            <strong><%= trackable.object.current %></strong>
          </div>
          <div class="small-4 columns text-right">
            <h3>
              <span class="right cogs125">
              <%= link_to "<i class='fa fa-cogs'></i>".html_safe, "#{polymorphic_path(@parent_object)}/trackables/#{trackable.object.id}/edit", class: "iconlink", :remote => true %>
              <%= link_to "<i class='fa fa-times-circle'></i>".html_safe, "#{polymorphic_path(@parent_object)}/trackables/#{trackable.object.id}", class: "iconlink delete", method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %>
              </span>
            </h3>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
  </fieldset>
<% end %>
