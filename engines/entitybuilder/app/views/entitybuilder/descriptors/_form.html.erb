<div id="form_div">
<%= simple_form_for [@parent_object, @descriptor], :remote => true, :html => {'data-no-transition-cache' => ''} do |f| %>
  <fieldset>
    <div class="row inline text-right">
      <div class="small-12 columns">
        <label class="inline-label-flat">Descriptor</label>
      </div>
    </div>
    <%= f.hidden_field :sort_order, :maxlength => 3 %>
    <div class="row">
      <div class="medium-12 columns">
        <div class="row">
          <div class="medium-8 columns">
            <%= f.input :name, placeholder: 'Ex. Race' %>
          </div>
          <div class="medium-4 columns text-center">
            <label>Private</label>
            <%= f.input :is_private, label: '', as: :boolean %>
          </div>
        </div>
        <%= f.input :description, placeholder: 'Ex. Human' %>
      </div>
    </div>
  </fieldset>
  <%= render "layouts/form/save_and_cancel" %>
<% end %>
</div>

<% unless @descriptor.new_record? %>
<div id="form_modifier_placeholder">
  <%= render "entitybuilder/modifiers/form_item_list" %>
</div>
<% end %>
