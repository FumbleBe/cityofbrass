<% if @notable.errors.count == 0 %>

  $('.alert-box').remove();
  $("body").append ("<%= j(render 'layouts/notices') %>");
  $('#form_div').remove();
  $('#form_placeholder').show();
  $('#notables_form').html("<%= j(render 'form_list') %>");
  $('#notables_list').html("<%= j(render 'list') %>");
  bindSortable();

<% else %>

  $('#form_div').remove();
  $('#form_placeholder').after('<%= j render("form") %>');

<% end %>
